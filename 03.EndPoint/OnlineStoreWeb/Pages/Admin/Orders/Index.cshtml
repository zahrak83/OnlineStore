@page
@model OnlineStoreWeb.Pages.Admin.Orders.IndexModel
@{
    ViewData["Title"] = "مدیریت سفارشات";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary mb-0">
                مدیریت سفارشات (@Model.Orders.Count سفارش)
            </h3>
            <div>
                <span class="badge bg-success fs-6 me-3">تکمیل شده: @Model.Orders.Count</span>
                <span class="badge bg-secondary fs-6">در انتظار: ۰</span>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!Model.Orders.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-receipt display-1 text-muted"></i>
                <p class="lead text-muted mt-3">هنوز هیچ سفارشی در فروشگاه ثبت نشده است.</p>
                <a asp-page="/Index" class="btn btn-primary">بازگشت به فروشگاه</a>
            </div>
        }
        else
        {
            <div class="card shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>شماره سفارش</th>
                                <th>مشتری</th>
                                <th>تاریخ ثبت</th>
                                <th>تعداد آیتم</th>
                                <th>مبلغ کل</th>
                                <th>وضعیت</th>
                                <th class="text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary">#@order.Id</strong>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@order.UserName</strong>
                                            <small class="text-muted d-block">ID: @order.UserName.Split('_').Last()</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span dir="ltr" class="d-block text-start">
                                            @order.CreatedAt
                                        </span>
                                        <small class="text-muted">@order.CreatedAt.ToString("HH:mm")</small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@order.ItemsCount</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">@String.Format("{0:N0}", order.TotalPrice) تومان</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">تکمیل شده</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-page="./Details" asp-route-id="@order.Id"
                                           class="btn btn-primary btn-sm" title="جزئیات سفارش">
                                            جزئیات
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>