@page
@model OnlineStoreWeb.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "پنل مدیریت فروشنده";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary">
            <i class="bi bi-speedometer2"></i> پنل مدیریت فروشنده
        </h2>
        <p class="text-muted">خوش آمدید، فروشنده گرامی</p>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-3">
        <a asp-page="/Admin/Products/Index" class="text-decoration-none">
            <div class="card text-white bg-primary shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam fs-1"></i>
                    <h4 class="mt-3">محصولات</h4>
                    <p>ایجاد، ویرایش و مدیریت موجودی</p>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-3">
        <a asp-page="/Admin/Categories/Index" class="text-decoration-none">
            <div class="card text-white bg-success shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-tags fs-1"></i>
                    <h4 class="mt-3">دسته‌بندی‌ها</h4>
                    <p>مدیریت دسته‌بندی محصولات</p>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-3">
        <a asp-page="/Admin/Customers/Index" class="text-decoration-none">
            <div class="card text-white bg-info shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people fs-1"></i>
                    <h4 class="mt-3">مشتریان</h4>
                    <p>مشاهده لیست و جزئیات مشتریان</p>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-3">
        <a asp-page="/Admin/Orders/Index" class="text-decoration-none">
            <div class="card text-white bg-warning shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-receipt fs-1"></i>
                    <h4 class="mt-3">سفارشات</h4>
                    <p>مشاهده تمام سفارشات فروشگاه</p>
                </div>
            </div>
        </a>
    </div>
</div>