@page
@model OnlineStoreWeb.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5>بازیابی رمز عبور</h5>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    @if (TempData["ResetLink"] != null)
                    {
                        <p>لینک تست (در محیط واقعی به ایمیل ارسال می‌شود):</p>
                        <a href="@TempData["ResetLink"]" class="btn btn-primary">کلیک کنید برای تغییر رمز</a>
                    }
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">ایمیل خود را وارد کنید</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-info w-100">ارسال لینک بازیابی</button>
                </form>

                <div class="mt-3 text-center">
                    <a asp-page="/Login">بازگشت به ورود</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}