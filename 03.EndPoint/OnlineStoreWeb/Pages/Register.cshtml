@page
@model OnlineStoreWeb.Pages.RegisterModel
@{
    ViewData["Title"] = "ثبت‌نام";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-3">ثبت‌نام در فروشگاه</h4>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @Html.Raw(Model.ErrorMessage)
                    </div>
                }

                <form method="post" novalidate>
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control @(ViewData.ModelState.ContainsKey(nameof(Model.Username)) && ViewData.ModelState[nameof(Model.Username)].Errors.Count > 0 ? "is-invalid" : "")" />
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control @(ViewData.ModelState.ContainsKey(nameof(Model.Password)) && ViewData.ModelState[nameof(Model.Password)].Errors.Count > 0 ? "is-invalid" : "")" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control @(ViewData.ModelState.ContainsKey(nameof(Model.ConfirmPassword)) && ViewData.ModelState[nameof(Model.ConfirmPassword)].Errors.Count > 0 ? "is-invalid" : "")" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100">ثبت‌نام</button>
                </form>

                <div class="mt-3 text-center">
                    <a asp-page="/Login">قبلاً ثبت‌نام کرده‌اید؟ ورود</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
