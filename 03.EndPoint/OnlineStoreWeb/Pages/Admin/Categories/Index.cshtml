@page
@model OnlineStoreWeb.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "مدیریت دسته‌بندی‌ها";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary mb-0">
                مدیریت دسته‌بندی‌ها (@Model.Categories.Count)
            </h3>
            <a asp-page="./Create" class="btn btn-success">
                ایجاد دسته‌بندی جدید
            </a>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!Model.Categories.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-tags display-1 text-muted"></i>
                <p class="lead text-muted mt-3">هنوز هیچ دسته‌بندی‌ای ایجاد نشده است.</p>
                <a asp-page="./Create" class="btn btn-primary">اولین دسته‌بندی را ایجاد کنید</a>
            </div>
        }
        else
        {
            <div class="card shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>نام دسته‌بندی</th>
                                <th>توضیحات</th>
                                <th class="text-center">تعداد محصولات</th>
                                <th class="text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cat in Model.Categories)
                            {
                                <tr>
                                    <td>
                                        <strong>@cat.Name</strong>
                                    </td>
                                    <td>
                                        @(string.IsNullOrWhiteSpace(cat.Description)
                                                                        ? "<span class='text-muted'>بدون توضیحات</span>"
                                                                        : cat.Description.Length > 80
                                                                        ? cat.Description.Substring(0, 80) + "..."
                                                                        : cat.Description)
                            </td>
                            <td class="text-center">
                                <span class="badge bg-info">به‌زودی</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-page="./Edit" asp-route-id="@cat.Id" class="btn btn-warning btn-sm" title="ویرایش">
                                        ویرایش
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@cat.Id" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('آیا از حذف دسته‌بندی «@cat.Name» اطمینان دارید؟');"
                                                title="حذف">
                                            حذف
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                                                }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>