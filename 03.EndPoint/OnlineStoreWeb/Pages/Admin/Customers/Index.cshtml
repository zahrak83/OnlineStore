@page
@model OnlineStoreWeb.Pages.Admin.Customers.IndexModel
@{
    ViewData["Title"] = "مدیریت مشتریان";
}

<div class="row">
    <div class="col-12">
        <h3 class="mb-4 text-primary">
            مدیریت مشتریان (@Model.Customers.Count نفر)
        </h3>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!Model.Customers.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-people display-1 text-muted"></i>
                <p class="lead text-muted mt-3">هنوز هیچ مشتری ثبت‌نام نکرده است.</p>
                <a asp-page="/Index" class="btn btn-primary">بازگشت به فروشگاه</a>
            </div>
        }
        else
        {
            <div class="card shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>نام کاربری</th>
                                <th>موجودی حساب</th>
                                <th>تعداد سفارش</th>
                                <th>تاریخ ثبت‌نام</th>
                                <th class="text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model.Customers)
                            {
                                <tr>
                                    <td>
                                        <strong>@customer.Username</strong>
                                        <small class="text-muted d-block">ID: @customer.Id</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-success fs-6">
                                            @String.Format("{0:N0}", customer.Balance) تومان
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">به‌زودی</span>
                                  
                                    </td>
                                    <td>
                                        <span class="text-muted">به‌زودی</span>
                              
                                    </td>
                                    <td class="text-center">
                                        <a asp-page="./Details" asp-route-id="@customer.Id"
                                           class="btn btn-primary btn-sm" title="جزئیات مشتری">
                                            جزئیات
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>