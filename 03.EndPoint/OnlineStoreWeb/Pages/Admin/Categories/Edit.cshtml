@page "{id:int}"
@model OnlineStoreWeb.Pages.Admin.Categories.EditModel
@{
    ViewData["Title"] = "ویرایش دسته‌بندی";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h3 class="mb-4 text-primary">
            ویرایش دسته‌بندی
        </h3>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <strong>در حال ویرایش: @Model.Category.Name</strong>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Category.Id" />

                    <div class="mb-3">
                        <label asp-for="Category.Name" class="form-label">
                            نام دسته‌بندی <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Category.Name" class="form-control" placeholder="مثال: گوشی موبایل" />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category.Description" class="form-label">
                            توضیحات (اختیاری)
                        </label>
                        <textarea asp-for="Category.Description" class="form-control" rows="4"
                                  placeholder="مثال: شامل گوشی‌های اندروید و آیفون"></textarea>
                        <span asp-validation-for="Category.Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-warning btn-lg px-5">
                            ذخیره تغییرات
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary btn-lg">
                            بازگشت به لیست
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}