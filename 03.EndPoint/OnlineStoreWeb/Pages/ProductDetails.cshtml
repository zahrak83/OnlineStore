@page "{id:int}"
@model OnlineStoreWeb.Pages.ProductDetailsModel
@{
    ViewData["Title"] = "جزئیات محصول";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="container my-5">
    <div class="row">

        <div class="col-md-6 text-center">
            <img class="img-fluid rounded shadow-sm"
                 style="max-height:450px; object-fit:cover;"
                 src="@(Model.Product.Images.FirstOrDefault() ?? "/images/no-image.png")"
                 alt="@Model.Product.Title" />
        </div>

        <div class="col-md-6">
            <h2 class="fw-bold">@Model.Product.Title</h2>

            <h4 class="text-primary my-3">
                @String.Format("{0:N0}", Model.Product.Price) تومان
            </h4>

            <p>@Model.Product.Description</p>

            <p>
                <span class="badge @(Model.Product.Stock > 0 ? "bg-success" : "bg-danger")">
                    @(Model.Product.Stock > 0 ? $"موجودی: {Model.Product.Stock}" : "ناموجود")
                </span>
            </p>

            @if (Model.Product.Stock > 0)
            {
                <form method="post"
                      asp-page-handler="AddToCart"
                      class="mt-4 d-flex align-items-center">

                    <button type="button" class="btn btn-outline-secondary" id="decreaseBtn">-</button>

                    <input type="number"
                           id="quantityInput"
                           value="1"
                           min="1"
                           max="@Model.Product.Stock"
                           class="form-control text-center mx-2"
                           style="width:80px;" />

                    <button type="button" class="btn btn-outline-secondary" id="increaseBtn">+</button>

                    <input type="hidden" name="Quantity" id="quantityHidden" value="1" />

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <button type="submit" class="btn btn-primary ms-3">
                            افزودن به سبد خرید
                        </button>
                    }
                    else
                    {
                        <a asp-page="/Account/Login"
                           asp-route-returnUrl="@Url.Page("/ProductDetails", new { id = Model.Product.Id })"
                           class="btn btn-primary ms-3">
                            افزودن به سبد خرید
                        </a>
                    }
                </form>
            }
            else
            {
                <p class="text-danger fw-bold mt-3">
                    این محصول موجود نیست.
                </p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const dec = document.getElementById('decreaseBtn');
        const inc = document.getElementById('increaseBtn');
        const qty = document.getElementById('quantityInput');
        const hidden = document.getElementById('quantityHidden');

        function sync() {
            hidden.value = qty.value;
        }

        dec?.addEventListener('click', () => {
            let v = parseInt(qty.value);
            if (v > 1) {
                qty.value = v - 1;
                sync();
            }
        });

        inc?.addEventListener('click', () => {
            let v = parseInt(qty.value);
            if (v < @Model.Product.Stock) {
                qty.value = v + 1;
                sync();
            }
        });

        qty?.addEventListener('change', sync);
    </script>
}
