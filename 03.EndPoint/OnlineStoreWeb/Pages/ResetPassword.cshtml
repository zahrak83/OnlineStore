@page
@model OnlineStoreWeb.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5>تعیین رمز جدید</h5>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    <div class="text-center">
                        <a asp-page="/Login" class="btn btn-primary">ورود به حساب</a>
                    </div>
                }
                else
                {
                    <form method="post">
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Token" />

                        <div class="mb-3">
                            <label class="form-label">رمز جدید</label>
                            <input asp-for="Input.NewPassword" class="form-control" type="password" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">تایید رمز جدید</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">تغییر رمز عبور</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}